<section class="posts">
  {{#each posts}}
  <article class="card">
    <header class="card-header flex-row justify-space-between">
      <h2><a href="/post/{{id}}">{{title}}</a></h2>
      <p>Posted by {{User.username}} on {{format_date createdAt}}</p>
    </header>
    <p class="card-body">{{body}}</p>
  </article>
  {{/each}}
</section>